@model ProductCategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<h3>Welcome to Marvel Homes selection. Please select one of the areas to see the our range.</h3>
<br />


@foreach (var item in Model.BuildingAreasList)
{
    <div class="row ">
        <div class="col-12" style="margin-top:10px">
            <h5>@item.Name   </h5>
            <div>
                <div class="" style="margin-top:5px; padding">
                    <partial name="_IndexPagePartialView" model="Model.ProductCategoryList.Where(s => s.BuildingArea.Name.Equals(item.Name))" />
                </div>

            </div>
        </div>
    </div>

}
