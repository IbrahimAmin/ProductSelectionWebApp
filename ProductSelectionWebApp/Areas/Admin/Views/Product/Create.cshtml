@model ProductViewModel
@using ProductSelectionWebApp.Extensions

@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Create Product</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.ModelName"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.ModelName" class="form-control" />
            </div>
            <span asp-validation-for="Product.ModelName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.ModelNumber"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.ModelNumber" class="form-control" />
            </div>
            <span asp-validation-for="Product.ModelNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control-file" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductCategories"></label>
            </div>
            <div class="col-5">
                <select class="form-control " asp-for="@Model.Product.ProductCategoryId" asp-items="Model.ProductCategories.ToSelectListItem(Model.Product.ProductCategoryId)"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Brands"></label>
            </div>
            <div class="col-5 ">
                <select class="form-control " asp-for="@Model.Product.BrandId" asp-items="Model.Brands.ToSelectListItem(Model.Product.BrandId)"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Ranges"></label>
            </div>
            <div class="col-5 ">
                <select class="form-control " asp-for="@Model.Product.RangeId" asp-items="Model.Ranges.ToSelectListItem(Model.Product.RangeId)"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="InclusionTypes"></label>
            </div>
            <div class="col-5">
                <select class="form-control " asp-for="@Model.Product.InclusionTypeId" asp-items="Model.InclusionTypes.ToSelectListItem(Model.Product.InclusionTypeId)"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Note">Note</label>
            </div>
            <div class="col-5">
                <input asp-for="Product.ModelName" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>

    
</form>