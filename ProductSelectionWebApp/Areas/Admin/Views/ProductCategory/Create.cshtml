@model ProductCategoryViewModel
@using ProductSelectionWebApp.Extensions

@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Create Product Category</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductCategory.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductCategory.Name" class="form-control" />
            </div>
            <span asp-validation-for="ProductCategory.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductCategory.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control-file" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="BuildingAreasList"></label>
            </div>
            <div class="col-5">
                <select class="form-control " asp-for="@Model.ProductCategory.BuildingAreaId" asp-items="Model.BuildingAreasList.ToSelectListItem(Model.ProductCategory.BuildingAreaId)"></select>                               
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>

    </div>
</form>